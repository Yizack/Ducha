<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.esmifrase.duchita">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.esmifrase.duchita.ControladorDeInicio"
        android:allowBackup="true"
        android:icon="@drawable/duchitaapp"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Dark">
        <activity
            android:label="@string/hint_username"
            android:name="com.esmifrase.duchita.Perfil"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name="com.esmifrase.duchita.Registrarse" />
        <activity android:name="com.esmifrase.duchita.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.esmifrase.duchita.Duchita"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.Dark"></activity>
        <activity android:name="com.esmifrase.duchita.Intro"
            android:label="Intro" />
    </application>

</manifest>

